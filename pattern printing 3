package Riyaa;

public class questions {
    public static void main(String[] args) {
        int n = 4;
        for(int row=1;row<2*n;row++){
            int col = row>n ?2*n-row : row;
            for(int j=1;j<=col;j++){
                System.out.print("* ");
            }
            System.out.println();

        }

    }
}
